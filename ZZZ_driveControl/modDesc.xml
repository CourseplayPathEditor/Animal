<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="21">
   <author>upsideDown</author>
    <title>
		<en>driveControl</en>
        <de>driveControl</de> 
		<fr>driveControl</fr>
    </title>
    <description>
        <en><![CDATA[driveControl is a collection of several driving assistance mods.]]></en>
		<de><![CDATA[Der driveControl ist ein Sammel-Mod für diverse Fahr-Helferlein.]]></de>
		<fr><![CDATA[Drive Control est un mod regroupant diverses assistances à la conduite - French traduction by Waylan89.]]></fr>
 	</description>
    <multiplayer supported="true"/>   
	<iconFilename>store.dds</iconFilename>
	<version>3.51</version>
	<l10n>
		<text name="driveControlShuttle">  <en>change driving direction</en>  <de>Fahrtrichtung wechseln</de><fr>Inverseur de Direction</fr>	</text>		
		<text name="driveControlShuttleForward">  <en>driving direction forward</en>  <de>Fahrtrichtung vorwärts</de><fr>Inverseur de Direction:Avant</fr>	</text>		
		<text name="driveControlShuttleBackward">  <en>driving direction backward</en>  <de>Fahrtrichtung rückwärts</de><fr>Inverseur de Direction:Arrière</fr>	</text>		
		<text name="driveControlShuttleOnOff">  <en>shuttle mode on/off</en>  <de>Wendeschaltung an/aus</de><fr>Inverseur de Direction On/Off</fr>	</text>		
		<text name="driveControlMotor">  <en>manual ignition</en>  <de>Zündung</de><fr>Moteur On/Off</fr>	</text>		
		<text name="driveControlMotorOn">  <en>manual ignition ON</en>  <de>Zündung AN</de><fr>Moteur On</fr>	</text>		
		<text name="driveControlMotorOff">  <en>manual ignition OFF</en>  <de>Motor aus</de><fr>Moteur Off</fr>	</text>		
		<text name="driveControlGearLimiterUp">  <en>gear limiter up</en>  <de>Getriebesperre hochsetzen</de><fr>Augmenter limiteur vitesse</fr>	</text>		
		<text name="driveControlGearLimiterDown">  <en>gear limiter down</en>  <de>Getriebesperre reduzieren</de><fr>Diminuer limiteur vitesse</fr>	</text>		
		<text name="driveControlGasLimiterUp">  <en>gas limiter up</en>  <de>Gasbegrenzer hochsetzen</de><fr>Augmenter limiteur régime</fr>	</text>		
		<text name="driveControlGasLimiterDown">  <en>gas limiter down</en>  <de>Gasbegrenzer reduzieren</de><fr>Diminuer limiteur régime</fr>	</text>		
		<text name="driveControlHandbrake">  <en>handbrake</en>  <de>Handbremse</de> <fr>Frein à main</fr>	</text>		
		<text name="driveControl4WD">  <en>4WD</en>  <de>Allrad</de> <fr>4RM</fr>	</text>		
		<text name="driveControlDiffLockFront">  <en>differential lock front</en>  <de>Differentialsperre vorne</de> <fr>Bloquage diff. avant</fr>	</text>		
		<text name="driveControlDiffLockBack">  <en>differential lock back</en>  <de>Differentialsperre hinten</de> <fr>Bloquage diff. arrière</fr>	</text>		
		<text name="driveControlGearLimiterUpDown_1">  <en>gear limiter analog up</en>  <de>Getriebesperre analog hochsetzen</de> <fr>limiteur vitesse anal. +</fr>	</text>		
		<text name="driveControlGearLimiterUpDown_2">  <en>gear limiter analog down</en>  <de>Getriebesperre analog reduzieren</de> <fr>limiteur vitesse anal. -</fr>	</text>		
		<text name="driveControlGasLimiterUpDown_1">  <en>gear limiter analog up</en>  <de>Gasbegrenzer analog hochsetzen</de> <fr>limiteur régime anal. +</fr>	</text>		
		<text name="driveControlGasLimiterUpDown_2">  <en>gear limiter analog down</en>  <de>Gasbegrenzer analog reduzieren</de> <fr>limiteur régime anal. -</fr>	</text>		
		<text name="driveControlActiveVehicleSwitcher">  <en>switch to next active vehicle</en>  <de>Nächstes aktives Fahrzeug</de> <fr></fr>	</text>		
		<text name="driveControlActiveVehicleSwitcherDown">  <en>switch to previous active vehicle</en>  <de>Voriges aktives Fahrzeug</de> <fr></fr>	</text>		
	</l10n>
	<inputBindings>
		
		<input name="driveControlShuttle" key1="KEY_space" button="" />
		<input name="driveControlShuttleForward" key1="" button="" />
		<input name="driveControlShuttleBackward" key1="" button="" />
		<input name="driveControlShuttleOnOff" key1="" button="" />
		<input name="driveControlMotor" key1="KEY_return" button="" />
		<input name="driveControlMotorOn" key1="" button="" />
		<input name="driveControlMotorOff" key1="" button="" />
		<input name="driveControlGearLimiterUp" key1="KEY_lshift KEY_right" button="" />
		<input name="driveControlGearLimiterDown" key1="KEY_lshift KEY_left" button="" />
		<input name="driveControlGasLimiterUp" key1="KEY_lshift KEY_up" button="" />
		<input name="driveControlGasLimiterDown" key1="KEY_lshift KEY_down" button="" />
		<input name="driveControlHandbrake" key1="KEY_lctrl KEY_space" button="" />
		<input name="driveControl4WD" key1="KEY_lshift KEY_4" button="" />
		<input name="driveControlDiffLockFront" key1="KEY_lshift KEY_5" button="" />
		<input name="driveControlDiffLockBack" key1="KEY_lshift KEY_6" button="" />
		<input name="driveControlActiveVehicleSwitcher" key1="KEY_lctrl KEY_tab" button="" />
