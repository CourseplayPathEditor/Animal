		<axis  name="driveControlGearLimiterUpDown" category="VEHICLE" key1="" key2="" key3="" key4="" button="" axis="" device="0" invert="false" button1="" button2="" />
		<axis  name="driveControlGasLimiterUpDown" category="VEHICLE" key1="" key2="" key3="" key4="" button="" axis="AXIS_2" device="0" invert="false" button1="" button2="" />
